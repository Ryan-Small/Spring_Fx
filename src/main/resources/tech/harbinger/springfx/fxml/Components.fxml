<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" styleClass="container" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="app-title" text="UMBRA" />
    <TextField maxWidth="200.0" promptText="Enter your name" />
    <Button text="OK" />

    <VBox>
        <Label text="Label" />
        <Button text="Button" />

        <CheckBox text="Checkbox">Some Text</CheckBox>
        <ChoiceBox>

            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1" />
                    <String fx:value="2" />
                    <String fx:value="3" />
                </FXCollections>
            </items>
        </ChoiceBox>
      <ComboBox prefWidth="150.0" promptText="Prompt Text">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="1" />
                <String fx:value="2" />
                <String fx:value="3" />
                <String fx:value="4" />
                <String fx:value="5" />
                <String fx:value="6" />
                <String fx:value="7" />
                <String fx:value="8" />
                <String fx:value="9" />
                <String fx:value="10" />
                <String fx:value="11" />
                <String fx:value="12" />
                <String fx:value="13" />
                <String fx:value="14" />
                <String fx:value="15" />
            </FXCollections>
        </items>
      </ComboBox>
      <DatePicker />
      <ListView prefHeight="200.0" prefWidth="200.0" />
      <Spinner />
      <ToggleButton mnemonicParsing="false" text="ToggleButton" />
      <TextField />
        <fx:define>
            <ToggleGroup fx:id="myToggleGroup" />
        </fx:define>
        <children>
            <RadioButton selected="true" text="A" toggleGroup="$myToggleGroup" />
            <RadioButton text="B" toggleGroup="$myToggleGroup" />
            <RadioButton text="C" toggleGroup="$myToggleGroup" />
        </children>
    </VBox>
</VBox>
